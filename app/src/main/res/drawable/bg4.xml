<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_focused="false"
        >
        <shape android:shape="rectangle">
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />

            <gradient android:startColor="@android:color/white" android:endColor="#fff" android:centerColor="#fff" android:angle="270" />
            <corners android:topLeftRadius="44dp" android:topRightRadius="44dp" />

        </shape>
    </item>

</selector>